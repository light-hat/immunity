version: '2'

services:
  db:
    image: postgres:15-alpine
    container_name: postgres
    expose:
      - 5432
    volumes:
      - postgres_data:/var/lib/postgresql/data
    environment:
      - POSTGRES_USER
      - POSTGRES_PASSWORD
      - POSTGRES_DB
    restart: always
    networks:
      - immunitynet
    healthcheck:
      test: pg_isready -U postgres
      interval: 20s
      timeout: 5s
      retries: 3
    labels:
      "docker_compose_diagram.cluster": "БД"

  redis:
    image: redis:7.0.15
    container_name: redis-master
    expose:
      - 6379
    volumes:
      - redis-data:/data
    restart: always
    networks:
      - immunitynet
    healthcheck:
      test: redis-cli ping
      interval: 30s
      timeout: 10s
      retries: 5
    labels:
      "docker_compose_diagram.cluster": "БД"

  immunity:
    image: l1ghth4t/immunity-iast:latest
    build:
      context: ../
      dockerfile: docker/Dockerfile
      target: server
    shm_size: 1g
    expose:
      - 8000
    volumes:
      - static_volume:/home/app/web/static
      - media_volume:/home/app/web/media
    environment:
      - API_HOST
      - API_PORT
      - POSTGRES_PORT
      - POSTGRES_HOST
      - POSTGRES_USER
      - POSTGRES_PASSWORD
      - POSTGRES_DB
    depends_on:
      - db
      - redis
    restart: always
    networks:
      - immunitynet
      - iast_global
    healthcheck:
      test: curl --fail http://localhost:8000 || exit 1
      interval: 20s
      timeout: 5s
      retries: 3
    labels:
      "docker_compose_diagram.icon": "django"
      "docker_compose_diagram.cluster": "Управляющий сервер"

  worker:
    image: l1ghth4t/immunity-iast-worker:latest
    build:
      context: ../
      dockerfile: docker/Dockerfile
      target: worker
    shm_size: 1g
    volumes:
      - static_volume:/home/app/web/static
      - media_volume:/home/app/web/media
    environment:
      - API_HOST
      - API_PORT
      - POSTGRES_PORT
      - POSTGRES_HOST
      - POSTGRES_USER
      - POSTGRES_PASSWORD
      - POSTGRES_DB
    depends_on:
      - db
      #- immunity
      - redis
    restart: always
    networks:
      - immunitynet
    deploy:
      resources:
        limits:
          memory: "4g"
          cpus: "2.0"
        reservations:
          memory: "2g"
          cpus: "1.0"
          devices:
            - driver: nvidia
              count: all
              capabilities: [ gpu ]
    healthcheck:
      test: celery -A core status | grep 'celery@'
      interval: 30s
      timeout: 10s
      retries: 5
    labels:
      "docker_compose_diagram.icon": "celery"
      "docker_compose_diagram.cluster": "Управляющий сервер"

  nginx:
    image: l1ghth4t/immunity-iast-nginx:latest
    build: ../nginx/
    container_name: nginx
    volumes:
      - static_volume:/home/app/web/static
      - media_volume:/home/app/web/media
    environment:
      - API_HOST
      - API_PORT
    ports:
      - ${API_PORT}:80
    depends_on:
      - immunity
    restart: always
    networks:
      - immunitynet
      - iast_global
    healthcheck:
      test: curl --fail http://localhost:80 || exit 1
      interval: 20s
      timeout: 5s
      retries: 3
    labels:
      "docker_compose_diagram.cluster": "Маршрутизация"

volumes:
  postgres_data:
  static_volume:
  media_volume:
  redis-data:

networks:
  immunitynet:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: "172.24.0.0/16"
  iast_global:
    external: true
